		| ("-" (e1=CODE.Mult) 
			eval(
				if (INHERIT==TypeInt && e1==TypeInt) { TypeInt }
				else if (INHERIT==TypeFloat && e1==TypeFloat) { TypeFloat }
				else if (INHERIT==TypeError && e1==TypeError) { TypeError }
				else if (INHERIT==TypeError) { e1 }
				else if (e1==TypeError) { INHERIT }
