<code Goal parse=LIST(CODE.Exp,"\n") />

<code Exp parse=(((e1=CODE.Split) CODE.Exp1) eval(return(e1))) />
<code Exp1 parse=((";" CODE.Exp1) | (CODE.Exp2) | ("" eval(return(INHERIT)))) />
