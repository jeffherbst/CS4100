<code Cons parse=((CODE.Extra (e1=CODE.Cons1) eval(return(e1) ))) />
<code Cons1 parse=(("::" (e1=CODE.Extra)
			eval(
				holder=TypeNull;

				if(e1==TypeList#TypeInt) { holder=TypeInt }
				else if(e1==TypeList#TypeFloat) { holder=TypeFloat }
				else if(e1==TypeError || e1==TypeList#TypeError) { holder=TypeError }

				if(INHERIT==TypeInt && holder==TypeInt) { fin=TypeList#TypeInt }
				else if(INHERIT==TypeFloat && holder==TypeFloat)  { fin=TypeList#TypeInt }
				else if(INHERIT==TypeError && holder==TypeError) { fin=TypeError }
				else if(INHERIT==TypeError) { fin=TypeList#holder }
				else if(holder==TypeError) { fin=INHERIT }
				else { print("Line " LINE_NO ": type error: " INHERIT " :: " e1); fin = TypeError }

				return(fin)
			)
			(e2=CODE.Cons1) eval(return(e2)))  
		| ("" eval(return(INHERIT)))) />

<code Extra parse=(("-" (e1=CODE.Extra) 
			eval(
				if(e1==TypeInt || e1==TypeFloat) { ; }
				else { print("Line " LINE_NO ": type error: - " e1); e1=TypeError }
				return(e1)
			)) 
		| ("hd" (e1=CODE.Extra) 
			eval(
				if(e1==TypeList#TypeFloat) { e1=TypeFloat }
				else if(e1==TypeList#TypeInt) { e1=TypeInt }	
				else { print("Line " LINE_NO ": type error: hd " e1); e1=TypeError }
				return(e1)
			)) 
		| ("tl" (e1=CODE.Extra) 
			eval(
				if(e1==TypeInt) { print("Line " LINE_NO ": type error: tl " e1); e1=TypeError }
				else if(e1==TypeFloat) { print("Line " LINE_NO ": type error: tl " e1); e1=TypeError }	
				else if(e1==TypeNull) { print("Line " LINE_NO ": type error: tl " e1); e1=TypeError }	
				else if(e1==TypeBool) { print("Line " LINE_NO ": type error: tl " e1); e1=TypeError }	
				else if(e1==TypeRef) { print("Line " LINE_NO ": type error: tl " e1); e1=TypeError }	
				return(e1)
			))
		| ("ref" (e1=CODE.Extra) 
			eval(
				if(e1!=TypeError) { return(TypeRef#e1) }
				else { return(TypeError) }
			)) 
		| ("!" (e1=CODE.Extra) 
			eval(
				if(e1==TypeError) { e1=TypeError }
				else if(e1==TypeRef#TypeInt) { e1=TypeInt }
				else if(e1==TypeRef#TypeFloat) { e1=TypeFloat }
				else { print("Line " LINE_NO ": type error: ! "e1); e1=TypeError }
				return(e1)
			)) 
		| ("not" (e1=CODE.Extra) 
			eval(
				if(e1==TypeBool) { e1=TypeBool }
				else if(e1==TypeError) { ; }
				else { print("Line " LINE_NO ": type error: not " e1); e1=TypeError } 
				return(e1)
			)) 
		| ((e1=CODE.Types) eval(return(e1))) ) />

<code Types parse=((INT eval(return(TypeInt))) 
		|(FLOAT eval(return(TypeFloat))) 
		|((id=ID) eval(
			t=LookupVar(id); 
			if(t=="") { print("Line " LINE_NO ": type error: undefined variable: " id); return(TypeError) }
			else { return(t) } 
			) 
		)
		| ("[]" eval(return(TypeList#TypeNull))) 
		| ("[" (e1=CODE.Comma) "]" eval(return(TypeList#(e1)))) 
		| ("(" (e1=CODE.Exp) ")")  eval(return(e1)) ) />


